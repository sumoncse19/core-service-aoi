{
    "info": {
        "name": "Pulikids API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [{
            "name": "Tracking Service",
            "item": [{
                    "name": "Activities",
                    "item": [{
                            "name": "Create Activity",
                            "request": {
                                "method": "POST",
                                "url": "{{base_url}}/tracking/activities",
                                "header": [{
                                    "key": "Authorization",
                                    "value": "Bearer {{token}}"
                                }],
                                "body": {
                                    "mode": "raw",
                                    "raw": {
                                        "title": "Swimming Class",
                                        "description": "Weekly swimming lessons for beginners",
                                        "start_time": "2024-03-20T10:00:00Z",
                                        "end_time": "2024-03-20T11:00:00Z",
                                        "assigned_staff": ["staff_id1", "staff_id2"],
                                        "max_participants": 10,
                                        "location": "Main Pool"
                                    },
                                    "options": {
                                        "raw": {
                                            "language": "json"
                                        }
                                    }
                                }
                            }
                        },
                        {
                            "name": "Get All Activities",
                            "request": {
                                "method": "GET",
                                "url": "{{base_url}}/tracking/activities",
                                "header": [{
                                    "key": "Authorization",
                                    "value": "Bearer {{token}}"
                                }]
                            }
                        },
                        {
                            "name": "Get Activity By ID",
                            "request": {
                                "method": "GET",
                                "url": "{{base_url}}/tracking/activities/{{activity_id}}",
                                "header": [{
                                    "key": "Authorization",
                                    "value": "Bearer {{token}}"
                                }]
                            }
                        },
                        {
                            "name": "Update Activity",
                            "request": {
                                "method": "PATCH",
                                "url": "{{base_url}}/tracking/activities/{{activity_id}}",
                                "header": [{
                                    "key": "Authorization",
                                    "value": "Bearer {{token}}"
                                }],
                                "body": {
                                    "mode": "raw",
                                    "raw": {
                                        "title": "Updated Swimming Class",
                                        "max_participants": 15
                                    },
                                    "options": {
                                        "raw": {
                                            "language": "json"
                                        }
                                    }
                                }
                            }
                        },
                        {
                            "name": "Get Upcoming Activities",
                            "request": {
                                "method": "GET",
                                "url": "{{base_url}}/tracking/activities/upcoming",
                                "query": [{
                                    "key": "days",
                                    "value": "7"
                                }],
                                "header": [{
                                    "key": "Authorization",
                                    "value": "Bearer {{token}}"
                                }]
                            }
                        }
                    ]
                },
                {
                    "name": "Attendance",
                    "item": [{
                            "name": "Record Attendance",
                            "request": {
                                "method": "POST",
                                "url": "{{base_url}}/tracking/attendance",
                                "header": [{
                                    "key": "Authorization",
                                    "value": "Bearer {{token}}"
                                }],
                                "body": {
                                    "mode": "raw",
                                    "raw": {
                                        "activity_id": "{{activity_id}}",
                                        "child_id": "{{child_id}}",
                                        "status": "present",
                                        "check_in_time": "2024-03-20T10:00:00Z"
                                    },
                                    "options": {
                                        "raw": {
                                            "language": "json"
                                        }
                                    }
                                }
                            }
                        },
                        {
                            "name": "Record Bulk Attendance",
                            "request": {
                                "method": "POST",
                                "url": "{{base_url}}/tracking/attendance/bulk",
                                "header": [{
                                    "key": "Authorization",
                                    "value": "Bearer {{token}}"
                                }],
                                "body": {
                                    "mode": "raw",
                                    "raw": {
                                        "activity_id": "{{activity_id}}",
                                        "attendances": [{
                                                "child_id": "{{child_id1}}",
                                                "status": "present"
                                            },
                                            {
                                                "child_id": "{{child_id2}}",
                                                "status": "absent"
                                            }
                                        ]
                                    },
                                    "options": {
                                        "raw": {
                                            "language": "json"
                                        }
                                    }
                                }
                            }
                        }
                    ]
                },
                {
                    "name": "Reports",
                    "item": [{
                            "name": "Get Daily Report",
                            "request": {
                                "method": "GET",
                                "url": "{{base_url}}/tracking/reports/daily",
                                "header": [{
                                    "key": "Authorization",
                                    "value": "Bearer {{token}}"
                                }]
                            }
                        },
                        {
                            "name": "Get Weekly Report",
                            "request": {
                                "method": "GET",
                                "url": "{{base_url}}/tracking/reports/weekly",
                                "query": [{
                                    "key": "startDate",
                                    "value": "2024-03-18"
                                }],
                                "header": [{
                                    "key": "Authorization",
                                    "value": "Bearer {{token}}"
                                }]
                            }
                        },
                        {
                            "name": "Get Monthly Report",
                            "request": {
                                "method": "GET",
                                "url": "{{base_url}}/tracking/reports/monthly",
                                "query": [{
                                        "key": "year",
                                        "value": "2024"
                                    },
                                    {
                                        "key": "month",
                                        "value": "3"
                                    }
                                ],
                                "header": [{
                                    "key": "Authorization",
                                    "value": "Bearer {{token}}"
                                }]
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "Child Service",
            "item": [{
                    "name": "Register Child",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/children/register",
                        "header": [{
                            "key": "Authorization",
                            "value": "Bearer {{token}}"
                        }],
                        "body": {
                            "mode": "raw",
                            "raw": {
                                "first_name": "John",
                                "last_name": "Doe",
                                "date_of_birth": "2020-01-01",
                                "gender": "male",
                                "medical_info": "No allergies",
                                "emergency_contact": {
                                    "name": "Jane Doe",
                                    "phone": "1234567890",
                                    "relationship": "Mother"
                                }
                            },
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        }
                    }
                },
                {
                    "name": "Get My Children",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/children/my-children",
                        "header": [{
                            "key": "Authorization",
                            "value": "Bearer {{token}}"
                        }]
                    }
                },
                {
                    "name": "Get Child Activity History",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/children/{{child_id}}/activity-history",
                        "header": [{
                            "key": "Authorization",
                            "value": "Bearer {{token}}"
                        }]
                    }
                },
                {
                    "name": "Get Eligible Activities",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/children/{{child_id}}/eligible-activities",
                        "header": [{
                            "key": "Authorization",
                            "value": "Bearer {{token}}"
                        }]
                    }
                }
            ]
        },
        {
            "name": "Booking Service",
            "item": [{
                    "name": "Create Booking",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/booking/bookings",
                        "header": [{
                            "key": "Authorization",
                            "value": "Bearer {{token}}"
                        }],
                        "body": {
                            "mode": "raw",
                            "raw": {
                                "child_id": "{{child_id}}",
                                "activity_id": "{{activity_id}}",
                                "start_date": "2024-03-20T10:00:00Z",
                                "end_date": "2024-03-20T11:00:00Z",
                                "notes": "First time attending"
                            },
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        }
                    }
                },
                {
                    "name": "Create Recurring Booking",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/booking/bookings/recurring",
                        "header": [{
                            "key": "Authorization",
                            "value": "Bearer {{token}}"
                        }],
                        "body": {
                            "mode": "raw",
                            "raw": {
                                "child_id": "{{child_id}}",
                                "activity_id": "{{activity_id}}",
                                "start_date": "2024-03-20T10:00:00Z",
                                "recurrence": {
                                    "frequency": "weekly",
                                    "until": "2024-06-20"
                                }
                            },
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        }
                    }
                },
                {
                    "name": "Create Payment",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/booking/payments",
                        "header": [{
                            "key": "Authorization",
                            "value": "Bearer {{token}}"
                        }],
                        "body": {
                            "mode": "raw",
                            "raw": {
                                "booking_id": "{{booking_id}}",
                                "amount": 50.0,
                                "payment_method": "credit_card",
                                "transaction_id": "txn_123456789"
                            },
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        }
                    }
                },
                {
                    "name": "Check Availability",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/booking/availability",
                        "query": [{
                                "key": "activity_id",
                                "value": "{{activity_id}}"
                            },
                            {
                                "key": "date",
                                "value": "2024-03-20"
                            }
                        ],
                        "header": [{
                            "key": "Authorization",
                            "value": "Bearer {{token}}"
                        }]
                    }
                },
                {
                    "name": "Confirm Booking",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/booking/bookings/{{booking_id}}/confirm",
                        "header": [{
                            "key": "Authorization",
                            "value": "Bearer {{token}}"
                        }]
                    }
                }
            ]
        }
    ],
    "variable": [{
            "key": "base_url",
            "value": "http://localhost:3000/api"
        },
        {
            "key": "token",
            "value": "your-auth-token"
        },
        {
            "key": "activity_id",
            "value": "activity-uuid"
        },
        {
            "key": "child_id",
            "value": "child-uuid"
        },
        {
            "key": "booking_id",
            "value": "booking-uuid"
        }
    ]
}